{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters" : {
    "FuncSourceType" : {
      "Type" : "String",
      "Default" : "S3",
      "AllowedValues" : ["S3"],
      "Description" : "Source da function"
    },

    "S3FuncBucket" : {
      "Type" : "String",
      "Description" : "Nome do Bucket da function"
    },

    "S3FuncArtifact" : {
      "Type" : "String",
      "Description" : "Informe o nome do zip"
    }
  },

  "Metadata" : {
    "AWS::CloudFormation" : {
     "ParameterGroup" : [
       {
         "Label" : {"default" : "Código fonte da aplicação - S3"},
         "Parameters" : ["S3FuncBucket", "S3FuncArtifact"]
       }
     ]
    }
  },

  "Resources" : {
    "FunFunctionLambda": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": "FunTesteFunction",
        "Handler": "index.handler",
        "Role": { "Fn::GetAtt" : ["LambdaExecutionRole", "Arn"] },
        "Code": {
          "S3Bucket": {"Ref" : "S3FuncBucket"},
          "S3Key": {"Ref" : "S3FuncArtifact"}
        },
        "Runtime": "nodejs4.3"
      }
    },

    "UpdateFunctionLambda": {
      "Type": "AWS::Lambda::Version",
      "Properties": {
        "FunctionName" : {"Ref" : "FunFunctionLambda"},
        "Description" : "Update da function"
      }
    },

    "LambdaExecutionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": {"Service": ["lambda.amazonaws.com"]},
            "Action": ["sts:AssumeRole"] }]
        },
        "Path": "/",
        "Policies": [{
          "PolicyName": "root",
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [{
              "Effect": "Allow",
              "Action": [
                "logs:*",
                "kms:*"
              ],
              "Resource": "*"
            }]
          }
        }]
      }
    }
  },

  "Outputs" : {
    "FunctionBucketSource" : {
      "Value" : {
        "Fn::Join" : ["", ["http://s3.amazon.com/", {"Ref" : "S3FuncBucket"}, "/",  {"Ref" : "S3FuncArtifact"}] ]
      },
      "Description" : "Source do codigo fonte da aplicação"
    },
    "MyStackName" : { "Value" : { "Ref" : "AWS::StackName" } }
  }
}